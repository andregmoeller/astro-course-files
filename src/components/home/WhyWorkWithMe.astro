---
import { getCollection } from "astro:content";

import Heading from "@/components/ui/Heading.astro";

const whyWorkWithMe = await getCollection("whyWorkWithMe");
---

<section aria-labelledby="why-work-with-me-title" class="why-work-with-me">
  <div>
    <Heading id="why-work-with-me-title" tagName="h2" tagSize="h2">
      I build fast, sleek, modern websites.
    </Heading>
    <ul role="list">
      {
        whyWorkWithMe.map(({ data }) => (
          <li>
            <Fragment set:html={data.icon} />
            <Heading tagName="h3" tagSize="h4">
              {data.title}
            </Heading>
            <p>{data.description}</p>
          </li>
        ))
      }
    </ul>
  </div>
</section>
