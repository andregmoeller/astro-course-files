---
import { getImage, Picture } from "astro:assets";
import backgroundImage from "../assets/background.png";
import Katie from "../assets/image.jpg";
import ReactWrapper from "../components/ReactWrapper";

const mobileImage = await getImage({ src: backgroundImage, width: 600, format: "webp" });
const desktopImage = await getImage({ src: backgroundImage, width: 1920, format: "webp" });
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
    <style define:vars={{ mobileImage: `url(${mobileImage.src})`, desktopImage: `url(${desktopImage.src})` }}>
      .hero-section {
        background-image: var(--mobileImage);
        background-size: cover;
      }

      @media (min-width: 768px) {
        .hero-section {
          background-image: var(--desktopImage);
        }
      }
    </style>
  </head>
  <body>
    <div class="hero-section">
      <h1>Astro</h1>
    </div>
    <p>Public Image</p>
    <img src="/image.jpg" alt="Katie Haus" />
    <p>Assets Image</p>
    <ReactWrapper>
      <Picture
        src={Katie}
        alt="Katie Haus"
        formats={["avif", "webp"]}
        fallbackFormat="jpg"
        widths={[240, 540, 720, 1080]}
        sizes="(max-width: 720px) 100vw, 720px"
        class="w-full h-auto"
      />
    </ReactWrapper>
  </body>
</html>
